<table>
  <tr>
    <th>Jugador</th>
    <th>Partidos Jugados</th>
    <th>Puntos</th>
    <th>Puntos por partido</th>
    <%#*<th>Id</th>%>
    <%#*<th>Gp</th>%>
    <%#*<th>Mpg</th>%>
    <%#*<th>Pts</th>%>
    <%#*<th>Fgm</th>%>
    <%#*<th>Fga</th>%>
    <%#*<th>Fg</th>%>
    <%#*<th>3pm</th>%>
    <%#*<th>3pa</th>%>
    <%#*<th>3p</th>%>
    <%#*<th>Ftm</th>%>
    <%#*<th>Fta</th>%>
    <%#*<th>Ft</th>%>
    <%#*<th>Day</th>%>
    <%#*<th>Month</th>%>
    <%#*<th>Year</th>%>
    <%#*<th>Season</th>%>
    <%#*<th>Player</th>%>
  </tr>

<% @scores.each do |score| %>
  <tr>
    <td><%= score.player.player %></td>
    <td><%= score.GP %></td>
    <td><%= score.PTS %></td>
    <td><%= score.PTPG %></td>
    
    <%#*<td><%= score.id %.></td>%>
    <%#*<td><%= score.GP %.></td>%>
    <%#*<td><%= score.MPG %.></td>%>
    <%#*<td><%= score.PTS %.></td>%>
    <%#*<td><%= score.FGM %.></td>%>
    <%#*<td><%= score.FGA %.></td>%>
    <%#*<td><%= score.FG %.></td>%>
    <%#*<td><%= score._3PM %.></td>%>
    <%#*<td><%= score._3PA %.></td>%>
    <%#*<td><%= score._3P %.></td>%>
    <%#*<td><%= score.FTM %.></td>%>
    <%#*<td><%= score.FTA %.></td>%>
    <%#*<td><%= score.FT %.></td>%>
    <%#*<td><%= score.day %.></td>%>
    <%#*<td><%= score.month %.></td>%>
    <%#*<td><%= score.year %.></td>%>
    <%#*<td><%= score.season %.></td>%>
    <%#*<td><%= score.player_id %.></td>%>
    <%#*<td><%= link_to 'Show', score %.></td>%>
    <%#*<td><%= link_to 'Edit', edit_score_path(score) %.></td>%>
    <%#*<td><%= link_to 'Destroy', score, :method => :delete, :data => { :confirm => 'Are you sure?' } %.></td>%>
  </tr>
<% end %>
</table>
<%= will_paginate @scores %>

